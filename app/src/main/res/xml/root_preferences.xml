<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/settings_header">
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_notifications"
            android:title="@string/settings_notification"
            android:summary="@string/settings_notification_summary"/>
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_sync"
            android:title="@string/settings_sync"
            android:summary="@string/settings_sync_summary"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/info_header">
        <Preference
            app:icon="@drawable/ic_github"
            app:title="@string/info_title"
            app:summary="https://github.com/xzsk2/DDSchedule">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/xzsk2/DDSchedule"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>